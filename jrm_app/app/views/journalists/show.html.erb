<p id="notice"><%= notice %></p>

<p>
  <b>First name:</b>
  <%= @journalist.first_name %>
</p>

<p>
  <b>Last name:</b>
  <%= @journalist.last_name %>
</p>

<p>
  <b>Title:</b>
  <%= @journalist.title %>
</p>

<p>
  <b>Stories:</b>
  <% @journalist.stories.each do |story| %>
    <div>
      <div><a href="<%= story.link%>"><%= story.headline %></a></div>
      <div><%= story.summary %></div>
      <div><%= story.date_published %></div>
    </div
  <% end %>
</p>


